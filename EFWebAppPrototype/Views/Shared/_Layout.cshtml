<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundle/app")
   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (!Request.IsAuthenticated)
                {
                    @Html.ActionLink("Account Snap Shot Prototype", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                }

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="active">@Html.ActionLink("Account", "Index", "Home")</li>
                        <li>@Html.ActionLink("Filing", "Index", "Home")</li>
                        <li>@Html.ActionLink("Refunds", "Index", "Home")</li>
                        <li>@Html.ActionLink("Credits & Deductions", "Index", "Home")</li>
                        <li>@Html.ActionLink("News & Events", "Index", "Home")</li>
                        <li>@Html.ActionLink("Forms & Pubs", "Index", "Home")</li>
                        <li>@Html.ActionLink("Help & Resources", "Index", "Home")</li>
                        <li>@Html.ActionLink("For Tax Pros", "Index", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @Html.Partial("_Footer")
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
